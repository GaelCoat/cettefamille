script(type="text/template", id="tpl-family")
  .col
    span {{family.get('name')}}
  .col
    span {{family.get('phone')}}
  .col
    span {{family.get('code')}}
  .col
    span {{family.get('mail')}}
  .col
    span {{family.getCreated('DD/MM/YYYY')}}
  .col
    span {{family.getState()}}
  .actions
    i.material-icons.open-dropdown more_horiz
      .dropdown
        a.done
          i.material-icons check
          | Traitée
        a.pending
          i.material-icons schedule
          | En attente
        a.delete
          i.material-icons close
          | Supprimer

