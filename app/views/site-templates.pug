script(type="text/template", id="tpl-blog-preview")
  a(href="/actualites/{{blog.get('_id')}}", soft)
    span {{blog.getCreated('d MMMM')}}
    h5 {{blog.get('title')}}
    p {{blog.get('description')}}
    .read-more
      i.fa.fa-caret-right
      .s Lire plus

script(type="text/template", id="tpl-testimony-preview")
  .col
    h5
      | {{testimony.get('name')}}
      span {{testimony.get('location')}}
    p {{testimony.getContent()}}
  .col.avatar

script(type="text/template", id="tpl-testimony-slider")
  .avatar
  .centered
    blockquote " {{testimony.getContent()}} "
    span {{testimony.get('name')}} - {{testimony.get('location')}}
